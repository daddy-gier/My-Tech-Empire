* text=auto

# Force LF for code
*.cpp text eol=lf
*.h   text eol=lf
*.cs  text eol=lf
*.py  text eol=lf
*.json text eol=lf
*.md  text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.txt text eol=lf

# Binary assets
*.uasset binary
*.umap   binary
*.fbx    binary
*.obj    binary
*.png    binary
*.jpg    binary
*.jpeg   binary
*.tga    binary
*.wav    binary
*.mp3    binary

# PowerShell stays Windows-friendly
*.ps1 text eol=crlf
